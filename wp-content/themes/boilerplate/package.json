{
	"private": true,
	"devDependencies": {
		"@_tw/themejson": "^0.1.2",
		"@angular-eslint/template-parser": "^13.5.0",
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/line-clamp": "^0.4.0",
		"@tailwindcss/typography": "^0.5.2",
		"@wordpress/eslint-plugin": "^12.4.0",
		"archiver": "^5.3.1",
		"cross-env": "^7.0.3",
		"esbuild": "^0.14.43",
		"eslint-plugin-php-markup": "^6.0.0",
		"eslint-plugin-tailwindcss": "^3.5.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"postcss-import-ext-glob": "^2.0.1",
		"postcss-simple-vars": "^6.0.3",
		"prettier": "^2.7.0",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"tailwindcss": "^3.1.3"
	},
	"scripts": {
		"development:editor": "cross-env _TW_TARGET=editor npx tailwindcss --postcss -i ./tailwind/tailwind.css -c ./tailwind/tailwind.config.js -o ./theme/style-editor.css",
		"development:frontend": "npx tailwindcss --postcss -i ./tailwind/tailwind.css -c ./tailwind/tailwind.config.js -o ./theme/style.css",
		"development:esbuild": "npx esbuild ./javascript/script.js --target=esnext --bundle --outfile=./theme/js/script.min.js",
		"development": "run-p development:*",
		"dev": "npm run development",
		"watch:editor": "npm run development:editor -- --watch",
		"watch:frontend": "npm run development:frontend -- --watch",
		"watch:esbuild": "npm run development:esbuild -- --watch",
		"watch": "run-p watch:*",
		"lint:eslint": "npx eslint theme/",
		"lint-fix:eslint": "npx eslint theme/ --fix",
		"lint:prettier": "npx prettier --check tailwind/**/*.css",
		"lint-fix:prettier": "npx prettier --write tailwind/**/*.css",
		"lint": "run-p lint:*",
		"lint-fix": "run-p lint-fix:*",
		"production:editor": "cross-env NODE_ENV=production npm run development:editor -- --minify",
		"production:frontend": "cross-env NODE_ENV=production npm run development:frontend -- --minify",
		"production:esbuild": "npm run development:esbuild -- --minify",
		"production": "run-p production:*",
		"prod": "npm run production",
		"zip": "node node_scripts/zip.js boilerplate",
		"bundle": "run-s production zip"
	}
}
